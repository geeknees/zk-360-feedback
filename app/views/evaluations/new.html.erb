<!-- app/views/evaluations/new.html.erb -->
<h1>New Evaluation</h1>

<%= form_with model: [@category, @evaluation] do |form| %>
  <div>
    <%= form.label :user_id, "Evaluatee" %>
    <%= form.collection_select :user_id, @users, :id, :name, prompt: "Select a user" %>
  </div>

  <div>
    <%= form.label :score %>
    <%= form.number_field :score, min: 1, max: 5 %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <!-- 擬似的なZK証明を送信 -->
  <%= hidden_field_tag :zk_proof, "valid_proof" %>

  <div>
    <%= form.submit "Submit Evaluation" %>
  </div>
<% end %>

