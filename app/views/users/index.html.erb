<h1>Users in <%= @organization.name %></h1>

<%= link_to 'New Category', new_category_path(@organization.name) %>

<hr />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(@organization.name, user) %> |
          <%= link_to 'Delete', user_path(@organization.name, user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path(@organization.name) %>

